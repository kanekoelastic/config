{
    "editor.formatOnSave":, true
    "editor.wordWrap": "on", // 右端で折り返す,
    "editor.links": true, // リンクをクリック可能に,
    "vim.useSystemClipboard": true,
    "vim.normalModeKeyBindingsNonRecursive": [
        {
            "before": [";"],
            "after": [":"],
        },
        {
            "before": ["<CR>"],
            "after": ["o", "<Esc>"],
        },
        {
            "before": ["j"],
            "after": ["g", "j"],
        },
        {
            "before": ["k"],
            "after": ["g", "k"],
        },
    ]
}
